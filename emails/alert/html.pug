style(type='text/css').
  .card {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    padding: 30px 15px;
    margin-bottom:15px;
    border:1px solid grey;
  }

  .email-title {
    text-align:center;
    margin-bottom:15px;
  }

  .card-title {
    font-weight:bold;
  }

  .card-info-line {
    display:flex;
    flex-direction:row;
    justify-content:space-between;
    align-items:center;
    margin:5px 0;
  }

  .card-info-line > div {
    width: 200px;
  }

  .card-image {
    width:100%;
    margin: 15px auto;
  }

  .center {
    text-align:center;
  }

  button {
    background-color: #3498db; /* Green */
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
  }

  .view-on-site {
    margin: 15px auto;
  }


.email-title Alert for #{alert.monitor.name}

.card 
  .card-title Alert Detail
  .card-info-line 
    div Alert At
    b #{timestamp}
  .card-info-line 
    div Monitor Name
    b #{alert.monitor.name}
  .card-info-line
    div Event
    b #{alert.detectionType}

.center 
  a(href=`${url}`) 
    button.view-on-site View Detail On Site

include ../footer.pug

