style(type='text/css').
  .card {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    padding: 30px 15px;
    margin-bottom:15px;
  }

  .email-title {
    text-align:center;
    margin-bottom:15px;
  }

  .card-title {
    font-weight:bold;
  }

  .card-info-line {
    display:flex;
    flex-direction:row;
    justify-content:space-between;
    align-items:center;
    margin:5px 0;
  }

  .card-image {
    width:100%;
  }

  .center {
    text-align:center;
  }

  button {
    background-color: #3498db; /* Green */
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
  }

  .view-on-site {
    margin: 15px auto;
  }

.email-title Daily Report For #{data.date}
.card 
  .card-title Monitor Information
  .card-info-line 
    div Monitor Name
    b #{monitor.name}
  .card-info-line 
    div Engines
    b Helmet Detections

.card 
  .card-title Report Summary
  .card-info-line 
    div Without Helmet Occasions
    b #{data.noHelmetCount}

.center 
  a(href=`${url}`) 
    button.view-on-site View On Site

include ../footer.pug

